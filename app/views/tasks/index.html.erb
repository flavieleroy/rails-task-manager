 <h1>Welcome to your task's list !</h1>

  <ul style= "list-style: none;">
    <% @tasks.each do |task| %>
    <li><%= link_to task.title, task_path(task) %> : <%= task.details %>
      <% if task.completed == true %><i class="far fa-check-square"></i><% else %><i class="far fa-square"></i><% end %>
    </li>
    <% end %>
  </ul>

  <%= link_to "Create a task", new_task_path(@task), class:"btn btn-outline-dark"%>
