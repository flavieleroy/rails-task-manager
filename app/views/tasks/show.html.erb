<h1><%= @task.title %></h1>
<p><%= @task.details %></p>
<p><% if @task.completed == true %>Task done !</i><% else %>To do<% end %></p>


<p><%= link_to "Edit task", edit_task_path(@task), class:"btn btn-outline-dark"%></p>
<p><%= link_to "Delete task", task_path(@task), method: :delete, data: { confirm: "Are you shure ?"}, class:"btn btn-outline-dark" %></p>
<p><%= link_to "Back to tasks", tasks_path, class:"btn btn-outline-dark" %></p>
